[{
  "name": "2U12x35 Riser1",
  "probe": "fru.probe(\"'BOARD_PRODUCT_NAME': 'A2UL16RISER\\d'\", fru_address=0x50)",
  "exposes": [
    {
      "name": "Riser1 Temp",
      "type": "TMP75",
      "address": "0x48",
      "bus": "$bus",
      "thresholds": [
          [
             {
                  "direction": "greater than",
                  "name": "upper critical",
                  "value": 80,
                  "severity": 1
              },
              {
                  "direction": "greater than",
                  "name": "upper non critical",
                  "value": 75,
                  "severity": 0
              },
              {
                  "direction": "less than",
                  "name": "lower non critical",
                  "value": 5,
                  "severity": 0
              },
              {
                  "direction": "less than",
                  "name": "lower critical",
                  "value": 0,
                  "severity": 1
              }
          ]
      ]
    },
    { "name": "Riser 1 Fru",
      "type": "IntelFruDevice",
      "address": "$fruaddress",
      "bus": "$bus"
    }
  ]
},
  {
  "name": "2U12x35 Riser2",
